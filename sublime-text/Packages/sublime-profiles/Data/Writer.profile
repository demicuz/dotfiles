{
	"caret_extra_width": 2,
	"draw_centered": true,
	"draw_indent_guides": false,
	// "draw_white_space": ["selection", "isolated"],
	// "draw_white_space": ["none"],
	// "font_face": "Writer",
	"font_face": "JetBrains Mono NL",
	"font_size": 13,
	"gutter": false,
	"highlight_line": false,
	"line_padding_bottom": 3,
	"line_padding_top": 3,
	"margin": 10,
	"scroll_context_lines": 2,
	"scroll_past_end": 0.5,
	"word_wrap": true,
	"wrap_width": 72,
	"theme": "Adaptive.sublime-theme",
	// "font_face": "JetBrains Mono",
	// "font_options": ["no_liga", "no_clig", "no_calt"],
	"save_on_focus_lost": true,
	"ignored_packages":
	[
		// "Vintage",
/*"Django",*/
/*"Django Syntax",*/
/*"LSP-json",*/
/*"LSP-pylsp",*/
/*"LSP-pyright",*/
		"LSP-pylsp",
		"MarkdownEditing",
		"Sass",
		"Sublime-Text-42-Headers",
	],

	"file_exclude_patterns": ["*.idx", "*.d", "*.pyc", "*.pyo", "*.exe", "*.dll", "*.obj","*.o", "*.a", "*.lib", "*.so", "*.dylib", "*.ncb", "*.sdf", "*.suo", "*.pdb", "*.idb", ".DS_Store", ".directory", "desktop.ini", "*.class", "*.psd", "*.db", "*.sublime-workspace"],
	"trim_trailing_white_space_on_save": "not_on_caret",
	"vintage_use_clipboard": true,
	"color_scheme": "Mariana.sublime-color-scheme",
}
